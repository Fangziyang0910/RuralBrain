# RuralBrain Backend Development Dockerfile
# 开发环境镜像 - 支持热重载
# 使用国内镜像源
FROM docker.1ms.run/library/python:3.13-slim

WORKDIR /app

# 配置国内镜像源（阿里云）
RUN sed -i 's/deb.debian.org/mirrors.aliyun.com/g' /etc/apt/sources.list.d/debian.sources && \
    apt-get clean

# 安装系统依赖（使用重试机制）
# 禁用代理以避免连接问题
RUN export http_proxy= && \
    export https_proxy= && \
    export HTTP_PROXY= && \
    export HTTPS_PROXY= && \
    apt-get update --fix-missing -o Acquire::Retries=3 -o Acquire::http::Timeout=60 && \
    apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    pkg-config \
    libopencv-dev \
    python3-opencv \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 安装 uv 包管理器（使用官方安装脚本）
RUN curl -LsSf https://astral.sh/uv/install.sh | sh && \
    mv /root/.local/bin/uv /usr/local/bin/uv

# 设置环境变量
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    UV_CACHE_DIR=/tmp/uv-cache \
    UV_HTTP_TIMEOUT=600 \
    PYTHONPATH=/app

# 复制项目依赖配置文件
COPY pyproject.toml uv.lock ./

# 安装依赖（包含开发依赖，支持热重载）
# 使用清华 PyPI 镜像源加速
RUN uv sync --frozen --index-url https://pypi.tuna.tsinghua.edu.cn/simple/

# 创建必要的目录
RUN mkdir -p uploads pest_results cow_results rice_results

# 暴露端口
EXPOSE 8080

# 启动命令（使用 uvicorn --reload 实现热重载）
# 注意：run_server.py 中已配置 reload=True
CMD ["uv", "run", "python", "run_server.py"]
